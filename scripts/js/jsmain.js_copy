							id_extra_mom != "instituto_madre"			&&
							id_extra_mom != "trabajando_madre"			&&
							id_extra_mom != "act_actual_madre"			&&
							id_extra_mom != "tiempo_enc_trabajo_madre"  &&
							id_extra_mom != "idioma_madre_traba"        &&
							id_extra_mom != "antigueda_empleo_madre"	&&
