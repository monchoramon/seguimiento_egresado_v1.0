							id_extra_mom != "tam_emp"                   &&
							id_extra_mom != "tipo_contrato_madre"       &&
							id_extra_mom != "sect_medio_empleo_madre"   &&
							id_extra_mom != "calidad_doc_madre"         &&
							id_extra_mom != "plan_es_madre"             &&
