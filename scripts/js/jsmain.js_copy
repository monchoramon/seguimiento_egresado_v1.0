							function otro_idioma_validar(){
								
								var input_txt    = $("#idioma_d_madre input[type=text]");
								var input_hidden = $("#idioma_d_madre input[type=hidden]");

								var ctn = 0;

									for(var x = 0; x < input_txt.length; x++){
										if( !input_txt[x].value ){
											ctn++;
										}
									}

								if( ctn > 0 ){
